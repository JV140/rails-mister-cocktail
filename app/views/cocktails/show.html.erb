<h2><%= @cocktail.name %></h2>

<h3>Ingredients</h3>

<div class="d-flex flex-column">
  <ol>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <strong><%= dose.ingredient.name %></strong> -
      <%= dose.description %>
      (<%= link_to 'delete', dose_path(dose), method: :delete %>)
    </li>
  <% end %>
  </ol>

  <div>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
    <%= link_to 'Show Cocktails', cocktails_path %>
  </div>
</div>
